<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
                android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/home_fragment_period_tv_size"
            android:id="@+id/home_fragment_lv_headImage"
            android:layout_width="@dimen/home_fragment_period_pop_local"
            android:layout_height="@dimen/home_fragment_period_pop_local"
            android:padding="10dp"
            android:src="@mipmap/heart_2" />

    <TextView
        android:layout_marginTop="@dimen/home_fragment_period_tv_size"
        android:id="@+id/home_fragment_lv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/home_fragment_lv_headImage"
        android:text="网名" />

    <TextView
        android:id="@+id/home_fragment_lv_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/home_fragment_lv_userName"
        android:layout_below="@+id/home_fragment_lv_userName"
        android:text="楼层" />

    <TextView
        android:id="@+id/home_fragment_lv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/home_fragment_lv_floor"
        android:layout_below="@id/home_fragment_lv_userName"
        android:text="01月02日23：04" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/home_fragment_lv_userName"
        android:src="@mipmap/article_comment"
        android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_fragment_lv_content"
            android:text="sssss"
            android:layout_alignLeft="@id/home_fragment_lv_floor"
            android:layout_below="@id/home_fragment_lv_floor"/>

        </com.zhy.autolayout.AutoRelativeLayout>
    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
