<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_uapdate_name_acitvity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGry"
    android:orientation="vertical">

    <include layout="@layout/title_line" />

    <TextView
        android:id="@+id/upn_tvdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:padding="200dp"
        android:text="一个好的昵称能吸引异性的注意哦~"
        android:textColor="@color/colorBlack"
        android:visibility="gone" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/upn_re"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <EditText
            android:id="@+id/upn_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/mf_tv_hei" />

        <TextView
            android:id="@+id/upn_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="10" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <RadioGroup
        android:id="@+id/upn_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mf_hor_margain"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/upn_rb_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableRight="@drawable/select_selector"
            android:gravity="center_horizontal"
            android:padding="@dimen/mf_panding"
            android:text="单身期"
            android:textSize="@dimen/mf_tv_hei" />

        <RadioButton
            android:id="@+id/upn_rb_double"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableRight="@drawable/select_selector"
            android:gravity="center_horizontal"
            android:padding="@dimen/mf_panding"
            android:text="恋爱期"
            android:textSize="@dimen/mf_tv_hei" />
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/upn_rcl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>


</com.zhy.autolayout.AutoLinearLayout>
