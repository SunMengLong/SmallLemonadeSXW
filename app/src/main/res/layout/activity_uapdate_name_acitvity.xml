<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_uapdate_name_acitvity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:orientation="vertical">

    <include layout="@layout/title_line" />

    <TextView
        android:id="@+id/upn_tvdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:padding="@dimen/mf_panding"
        android:text="一个好的昵称能吸引异性的注意哦~"
        android:textColor="@color/colorBlack"
        android:visibility="gone" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/upn_re"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <EditText
            android:id="@+id/upn_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLength="10"
            android:textSize="@dimen/mf_tv_hei" />

        <TextView
            android:id="@+id/upn_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="10" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/emotio_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/emotio_rela_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:background="@color/colorWhite"
            android:padding="20px">

            <TextView
                android:id="@+id/tv_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="单身期"
                android:textSize="@dimen/mf_tv_hei" />

            <ImageView
                android:id="@+id/iv_single"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:src="@mipmap/select_alipay" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/emotio_rela_double"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:background="@color/colorWhite"
            android:padding="20px">

            <TextView
                android:id="@+id/tv_double"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="恋爱期"
                android:textSize="@dimen/mf_tv_hei" />

            <ImageView
                android:id="@+id/iv_double"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:src="@mipmap/select_alipay"
                android:visibility="gone" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/upn_rcl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>


</com.zhy.autolayout.AutoLinearLayout>
