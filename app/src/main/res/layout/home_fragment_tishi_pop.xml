<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:padding="50px"
    android:background="#fff">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_fragment_period_pop_local"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="温馨提示"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_fragment_period_pop_localvv"
        android:background="@color/Gray"></LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_fragment_period_pop_local"
    android:text="确定举报楼主吗？"
    android:layout_gravity="center"
    android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_fragment_period_pop_local"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_fragment_love_shequ_quxiao2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_fragment_period"
           android:layout_weight="1"
            android:text="取消"
            android:textColor="#fff"
            android:background="#f00"
            android:layout_marginLeft="@dimen/home_fragment_note"
            ></Button>

        <Button
            android:id="@+id/home_fragment_love_shequ_queding2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_fragment_period"
           android:layout_weight="1"
            android:text="确定"
            android:textColor="#fff"
            android:background="#000"
            android:layout_marginLeft="@dimen/home_fragment_note"
            android:layout_marginRight="@dimen/home_fragment_note"
            />

    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
