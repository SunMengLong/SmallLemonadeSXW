<?xml version="1.0" encoding="utf-8"?>
<com.liaoinstan.springview.widget.SpringView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:focusable="true"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <com.explem.smalllemonade.view.MyListView
                android:divider="@null"
                android:id="@+id/listview_category_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.explem.smalllemonade.view.MyListView>

            <android.support.v7.widget.RecyclerView

                android:id="@+id/recyclerview_category_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>






</com.liaoinstan.springview.widget.SpringView>
