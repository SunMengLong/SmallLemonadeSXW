<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_wang_ji"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.explem.smalllemonade.WangJiActivity">
    <include layout="@layout/title_line" />
     <View
         android:layout_width="wrap_content"
         android:layout_height="8dp"
         android:background="#CDCDCD"
         />
    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_hao"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="输入您注册时的手机号"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#CDCDCD"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_yanzheng"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_marginLeft="20dp"
        android:layout_height="50dp"
        android:layout_width="0px"
        android:layout_weight="1"
        android:hint="输入验证码"/>
        <android.support.v7.widget.CardView
            android:id="@+id/cd_yanzheng"
            app:cardBackgroundColor="#ff0"
            app:cardCornerRadius="12dp"
            app:contentPadding="11dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:padding="8dp"
                android:text="获取验证码"
                android:textColor="#fff"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="#CDCDCD"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_xinmima"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_marginLeft="20dp"
        android:drawableRight="@mipmap/login_password_invisible"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:hint="请为您的账户设置新的密码"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/cd_tijiao"
        app:cardBackgroundColor="#ff0"
        app:cardCornerRadius="15dp"
        app:contentPadding="15dp"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:padding="12dp"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>


</com.zhy.autolayout.AutoLinearLayout>
