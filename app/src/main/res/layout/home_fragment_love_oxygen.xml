<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_fragment_love_oxygen_img3"
        android:layout_width="@dimen/home_fragment_period_pop_localv"
        android:layout_height="@dimen/home_fragment_period_pop_localv"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="@dimen/home_fragment_period_tv_size"
       />

    <TextView
        android:id="@+id/home_fragment_love_oxygen_title"
        android:layout_width="@dimen/home_fragment_period_pop_locals"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/home_fragment_love_oxygen_img3"
        android:layout_marginLeft="@dimen/home_fragment_note"
        android:layout_toLeftOf="@id/home_fragment_love_oxygen_img3"
        android:text="sss"
        android:textColor="@color/colorBlack"

        android:textSize="15sp" />

    <TextView

        android:id="@+id/home_fragment_love_oxygen_contentInter"
        android:layout_width="@dimen/home_fragment_period_pop_locals"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/home_fragment_love_oxygen_title"
        android:layout_marginLeft="@dimen/home_fragment_note"
        android:layout_marginTop="@dimen/common_padding"
        android:layout_toLeftOf="@id/home_fragment_love_oxygen_img3"
        android:text="ss"
        android:textColor="@color/Gray" />

    <TextView
        android:id="@+id/home_fragment_love_oxygen_line"
        android:layout_marginLeft="@dimen/home_fragment_note"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@id/home_fragment_love_oxygen_title"
        android:layout_below="@id/home_fragment_love_oxygen_contentInter"
        android:layout_toLeftOf="@id/home_fragment_love_oxygen_img3"
        android:background="@color/colorGry" />
<TextView
    android:layout_marginLeft="@dimen/home_fragment_note"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/home_fragment_love_oxygen_author"
    android:layout_below="@id/home_fragment_love_oxygen_line"

    />

</com.zhy.autolayout.AutoRelativeLayout>
