<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <LinearLayout
        android:layout_margin="20px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="20px"
                    android:id="@+id/home_fragment_love_oxygen_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/home_fragment_note"
                    android:text="嫁给爱情就够了吗？"
                    android:textColor="#323232"
                    android:textSize="17sp" />
                <TextView
                    android:layout_margin="20px"
                    android:textSize="15sp"
                    android:id="@+id/home_fragment_love_oxygen_contentInter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/home_fragment_note"
                    android:layout_marginTop="@dimen/common_padding"
                    android:text="击肯定加班VC绝大部分v今独生女控件的"
                    android:textColor="#ccc"/>

                <TextView
                    android:layout_marginTop="50px"
                    android:id="@+id/home_fragment_love_oxygen_line"
                    android:layout_marginLeft="@dimen/home_fragment_note"
                    android:layout_width="700px"
                    android:layout_height="2dp"
                    android:background="@color/colorGry" />
                <TextView
                    android:layout_marginTop="50px"
                    android:layout_marginLeft="@dimen/home_fragment_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_fragment_love_oxygen_author"
                    android:textColor="#ccc"
                    android:text="作者；天权"
                    />
            </LinearLayout>

            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/home_fragment_love_oxygen_img3"
                android:layout_width="400px"
                android:layout_height="400px"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/home_fragment_period_tv_size"
                />
        </LinearLayout>
    </LinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
