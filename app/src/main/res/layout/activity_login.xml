<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.explem.smalllemonade.LoginActivity">
    <ImageView

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:src="@mipmap/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="40dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15px"
            android:layout_height="40dp"
            android:src="@mipmap/login_user"/>
        <EditText
            android:id="@+id/phone_num"
            android:layout_marginLeft="48dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="match_parent"
            android:hint="手机号"/>

    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:background="#F7F7F7" />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_pass"
            android:layout_width="40dp"
            android:layout_marginLeft="2dp"
            android:layout_height="40dp"
            android:layout_marginTop="15px"
            android:src="@mipmap/login_password"/>
        <EditText
            android:id="@+id/et"
            android:layout_marginLeft="48dp"
            android:gravity="center_vertical"
            android:background="#fff"
            android:layout_width="match_parent"
            android:drawableRight="@mipmap/login_password_invisible"
            android:layout_height="match_parent"
            android:hint="密码"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:id="@+id/wangji_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="right"
        android:textSize="20dp"
        android:text="忘记密码吗？"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_log"
        app:cardCornerRadius="15dp"
        app:contentPadding="15dp"
        android:layout_marginTop="30px"
        app:cardBackgroundColor="#ff0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:padding="12dp"
            android:text="登录"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
       android:gravity="center_horizontal"
        android:layout_marginTop="70px"
        android:text="使用其他社交软件登录"/>
    <ImageView
        android:id="@+id/weixin_iv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@mipmap/login_wechat_btn2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="25px"
        android:text="微信"/>

   <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_height="0dp">
    <TextView
        android:id="@+id/zhanghao"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="还没有账号立即去"/>

   <TextView
       android:id="@+id/zhuce_tv"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:textColor="#ff0"
       android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/zhanghao"
        android:text="注册"

      />
 </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
