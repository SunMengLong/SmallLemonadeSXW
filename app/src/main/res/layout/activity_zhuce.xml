<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_zhuce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.explem.smalllemonade.ZhuceActivity">
    <include layout="@layout/title_line" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:src="@mipmap/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_hao"
            android:gravity="center_vertical"
            android:background="#fff"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="输入您注册的手机号"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#CDCDCD"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_yanzheng"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_marginLeft="20dp"
        android:layout_height="50dp"
        android:layout_width="0px"
        android:layout_weight="1"
        android:hint="输入验证码"/>
        <android.support.v7.widget.CardView
           android:id="@+id/cv_huoqu"
            app:cardBackgroundColor="#ff0"
            app:cardCornerRadius="12dp"
            app:contentPadding="11dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:padding="8dp"
                android:text="获取验证码"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_huoqu" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="#CDCDCD"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_mima"
            android:gravity="center_vertical"
            android:background="#fff"
            android:layout_marginLeft="20dp"
            android:drawableRight="@mipmap/login_password_invisible"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:hint="设置密码"/>
    </LinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/zhanghao"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="3dp"
            android:drawableLeft="@mipmap/signup_item_selected"
            android:text="我已阅读并同意"/>

        <TextView
            android:id="@+id/xiexi_tv"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="3dp"
            android:textColor="#ff0"
            android:layout_toRightOf="@id/zhanghao"
            android:text="小拧乐用户协议"

            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/cd_wancheng"
        app:cardBackgroundColor="#ff0"
        app:cardCornerRadius="15dp"
        app:contentPadding="15dp"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:padding="12dp"
            android:text="完成注册"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
</com.zhy.autolayout.AutoLinearLayout>
