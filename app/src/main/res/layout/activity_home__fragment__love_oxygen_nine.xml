<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home__fragment__love_oxygen_nine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_fragment_period">
        <ImageView
            android:id="@+id/tuichu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/return_back"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>

<WebView
    android:layout_below="@+id/auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/home_fragment_love_oxygen_nine_web"></WebView>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_fragment_period_pop_localss"
        android:orientation="horizontal"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/nine_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1"
            android:drawableTop="@mipmap/profile_others_msg2x"
            />
        <CheckBox
            android:id="@+id/nine_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/star"
            android:text="6"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="分享"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableTop="@mipmap/share"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
