<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/home_fragment_period_pop_left"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_fragment_period_pop_local"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_fragment_period_pop_left"
            android:src="@mipmap/home_msg_stranger" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/home_fragment_period_pop_left"
            android:text="@string/period_one_dog_pop_button_concern" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_fragment_period_pop_wigth"
    android:background="@color/Gray"></LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_fragment_period_pop_local"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_fragment_period_pop_left"
            android:src="@mipmap/home_msg_system" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/home_fragment_period_pop_left"
            android:text="@string/period_one_dog_pop_button_xitong_message" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_fragment_period_pop_wigth"
        android:background="@color/Gray"></LinearLayout>
</LinearLayout>
